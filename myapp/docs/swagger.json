        "/api/item/list": {
            "post": {
                "description": "Возвращает список предметов с поддержкой пагинации, сортировки, фильтрации и поиска. Поддерживает различные типы предметов: базовые предметы (Item), оружие (Weapon) и броню (Armor)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Предметы"
                ],
                "summary": "Получить список предметов с фильтрацией и пагинацией",
                "parameters": [
                    {
                        "description": "Параметры запроса для фильтрации, сортировки и пагинации",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.ListRequest"
                        }
                    },
                    {
                        "type": "string",
                        "description": "Access token в формате: Bearer {token}",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Успешный ответ со списком предметов",
                        "schema": {
                            "$ref": "#/definitions/dto.ItemListResponse"
                        }
                    },
                    "400": {
                        "description": "Неверный формат запроса",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Предметы не найдены",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
